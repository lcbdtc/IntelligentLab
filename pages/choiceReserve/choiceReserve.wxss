/* pages/choiceReserve/choiceReserve.wxss */

page {
  height: 100%;
}

.dialog-content {
  height: 100%;
  padding: 0 1.6em 0.8em;
  min-height: 40rpx;
  /* max-height: 930rpx; */
  overflow-y: auto;
  font-size: 15px;
  line-height: 1.3;
  word-wrap: break-word;
  word-break: break-all;
  color: #808080;
  background-color: #f8f8f8;
}

.dialog-group {
  text-align: center;
  background-color: #fff;
}

.label {
  margin-bottom: 15px;
}

.label__text {
  display: inline-block;
  vertical-align: middle;
}

.label__icon {
  position: relative;
  margin-right: 10px;
  display: inline-block;
  vertical-align: middle;
  width: 18px;
  height: 18px;
  background: #fcfff4;
}

.label__icon-checked {
  position: absolute;
  top: 3px;
  left: 3px;
  width: 12px;
  height: 12px;
  background: #1aad19;
}

.checkboxGroup {
  margin-top: 40rpx;
}

.checkbox {
  padding-right: 200rpx;
  font-size: 45rpx;
}

checkbox {
  height: 90rpx;
}

.reserveNum {
  display: flex;
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 20rpx;
}

.reserveNum-text {
  padding-top: 5rpx;
  width: 180rpx;
}

.reserveNum-input {
  width: 50%;
}

.reson {
  background-color: #fff;
  margin-bottom: 50rpx;
  padding: 20rpx;
}

.reson-text {
  padding-top: 5rpx;
  width: 180rpx;
}

.reson-input {
  width: 100%;
  background-color: #fff;
}

.bottom-btn {
  /* position: fixed;
  bottom: 0px; */
  display: flex;
  flex-direction: row;
}

.btn {
  width: 100%;
}
